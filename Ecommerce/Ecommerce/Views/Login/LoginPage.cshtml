@model LoginModel
@{
	ViewData["Title"] = "Login Page";
}

<div class="container mt-5 pt-5">
	@if (TempData["Error"] != null)
	{
		<span class="text-danger">@TempData["Error"]</span>
	}
	@if (TempData["ErrorLogin"] != null)
	{
		<span class="text-danger">@TempData["ErrorLogin"]</span>
	}

	<form method="post" asp-controller="Login" asp-action="Login">
		<div>
			<label for="username" asp-for="Username" class="form-label"></label>
			<input id="username" asp-for="Username" class="form-control" />
			<span class="text-danger" asp-validation-for="Username"></span>
		</div>

		<div>
			<label for="password" asp-for="Password" class="form-label"></label>
			<input id="password" asp-for="Password" class="form-control" />
			<span class="text-danger" asp-validation-for="Password"></span>
		</div>

		<div class="mt-2">
			<button class="btn btn-success" type="submit">Save</button>
			<button class="btn btn-warning" type="reset">Reset</button>
		</div>
	</form>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
