@{
	var quantity = TempData["TotQuantita"];
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Mordi & Fuggi</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
	<link rel="stylesheet"
		  href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css2?family=Rozha+One&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Ecommerce.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light mb-3 position-fixed fixed-top top-0">
			<div class="container-fluid">
				<a class="navbar-brand w-25" asp-area="" asp-controller="Home" asp-action="Index"><img class="w-75" src="~/img/mordi (200 x 50 px).png" /></a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<div class="container navbar-nav flex-grow-1 justify-content-end align-items-center">
						<div class="tabs">
							<input type="radio" id="radio-2" name="tabs">
							<label class="tab" for="radio-2"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a></label>
							@{
								if (ViewData["IsLogged"] != null && (bool)ViewData["IsLogged"] == false)
								{
									<input type="radio" id="radio-3" name="tabs">
									<label class="tab" for="radio-3"><a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="LoginPage">Login</a></label>
								}
								else if (ViewData["IsLogged"] != null && (bool)ViewData["IsLogged"] == true)
								{
									<input type="radio" id="radio-3" name="tabs">
									<label class="tab" for="radio-3"><a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Logout">Logout</a></label>
								}
							}
							<input type="radio" id="radio-4" name="tabs">
							<label class="tab" for="radio-4"><a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="AdminPage">AdminPage</a></label>
							<input type="radio" id="radio-1" name="tabs" checked="">
							<label class="tab" for="radio-1">
								<a class="nav-link text-dark position-relative" asp-area="" asp-controller="Cart" asp-action="Index">
									<i class="bi bi-cart2 fs-3"></i>
									@{
										if (ViewData["IsLogged"] != null)
										{
											<span class="notification">@quantity</span>
										}
									}
								</a>
							</label>
							<span class="glider"></span>
						</div>
					</div>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="footer text-black text-center">
		<div class="container">
			&copy; 2025 - Mordi e Fuggi
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
