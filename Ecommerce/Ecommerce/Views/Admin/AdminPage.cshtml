@model AdminProductsViewModel;
@{
	ViewData["Title"] = "Admin Page";
	CategoryViewModel categories = ViewBag.CategoryList;
}

<div class="container-fluid my-5 py-3">
	<div class="row align-items-center">
		<div class="text-end col-2 mb-4 pt-5">
			<a class="button btn" asp-controller="Home" asp-action="Index">
				<i class="bi bi-arrow-left svgIcon"></i>
			</a>
		</div>
		<div class="col-8">
			<h1 class="text-center mb-4 pt-5">Pagina Amministratore</h1>
		</div>
		@if (TempData["ErrorDel"] != null)
{
	<span class="text-danger">@TempData["ErrorDel"]</span>
}
		<div class="col-2">
		</div>
	</div>
	<div class="d-flex justify-content-end mb-3">
		<button class="icon-btn add-btn" onclick="location.href='@Url.Action("AddPage", "Admin")'">
	</div>
	<table class="table table-bordered table-hover">
		<thead class="thead-dark ">
			<tr class="text-center centroTab">
				<th>Id</th>
				<th>Prodotto</th>
				<th>Prezzo</th>
				<th>Descrizione corta</th>
				<th>Categoria</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var product in Model.AdminProducts)
			{
				<tr class="centroTab">
					<td>@product.Id</td>
					<td>@product.Name</td>
					<td>@product.Price.ToString("F2")</td>
					<td>@product.DescriptionShort</td>
					<td>@product.CategoryName</td>
					<td class=" d-flex border-0">
						<a class="btn btn-warning btn-sm mx-1" asp-controller="Admin" asp-action="EditPage" asp-route-id="@product.Id"><i class="bi bi-pencil-square"></i></a>
						<a class="btn btn-danger btn-sm mx-1" asp-controller="Admin" asp-action="Delete" asp-route-id="@product.Id"><i class="bi bi-trash3"></i></a>
					</td>
				</tr>
			}
		</tbody>
	</table>

	<h2>LISTA CATEGORIE</h2>

	<div class="text-end">
		<a class="btn btn-warning btn-sm mt-1 mb-3" asp-controller="Admin" asp-action="AddCategoryPage"><i class="bi bi-plus-lg"></i> AGGIUNGI CATEGORIA</a>
	</div>

	<table class="table table-bordered table-hover">
		<thead class="thead-dark ">
			<tr class="text-center centroTab">
				<th>Id</th>
				<th>Nome</th>
				<th>Copertina</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var category in categories.Categories)
			{
				<tr class="centroTab">
					<td>@category.Id</td>
					<td>@category.Name</td>
					<td>@category.Img</td>
					<td class=" d-flex border-0">
						<a class="btn btn-warning btn-sm mx-1" asp-controller="Admin" asp-action="EditCategoryPage" asp-route-id="@category.Id"><i class="bi bi-pencil-square"></i></a>
						<a class="btn btn-danger btn-sm mx-1" asp-controller="Admin" asp-action="DeleteCategory" asp-route-id="@category.Id"><i class="bi bi-trash3"></i></a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
